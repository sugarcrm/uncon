<style>
.dashboard .thumbnail.dashlet:not(.collapsed) .ratings-chart-wrapper .nv-chart {
    height: 401px;
}
.sidebar-content .thumbnail.dashlet:not(.collapsed) .ratings-chart-wrapper .nv-chart {
    height: 301px;
}
.ratings-chart-wrapper .opportunity-metric {
    cursor: pointer;
}
.ratings-chart-wrapper .opportunity-metric .label {
    cursor: pointer;
}
.ratings-chart-wrapper .opportunity-metric:focus .label {
    outline: 3px auto #589bda;
    outline: 3px auto -moz-mac-focusring;
    outline: 3px auto -webkit-focus-ring-color;
}
</style>
<div data-content="chart">
    <div class="nv-chart nv-chart-donut">
        <svg id="{{cid}}"></svg>
    </div>
    {{#eachOptions statusCollection}}
        <div class="opportunity-metric" data-status="{{value.key}}" style="width:{{../statusWidth}}" tabindex="0" role="button" aria-label="{{value.label}}" aria-pressed="{{#eq value.active "true"}}true{{else}}false{{/eq}}">
            <span class="label" style="background-color:{{value.color}}" rel="tooltip" title="Average {{value.label}}: {{value.grade}}">{{value.grade}}</span>
            <div class="opportunity-metric-description"{{#if value.active}} style="font-weight:bold"{{/if}}>{{value.label}} ({{value.count}})</div>
        </div>
    {{/eachOptions}}
</div>
<div class="block-footer hide" data-content="nodata">{{str "LBL_NO_DATA_AVAILABLE"}}</div>
