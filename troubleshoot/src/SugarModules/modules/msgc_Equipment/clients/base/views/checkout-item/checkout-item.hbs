<div class="record">
    {{#each meta.fields}}
        <div class="span3 record-cell">
            <div class="record-label" data-name="{{name}}">
                {{str label module}}
            </div>
            <span class="normal index{{index}}" data-fieldname="{{name}}" data-index="{{index}}">
                {{field ../this model=../model template=template}}
            </span>
        </div>
    {{/each}}
</div>
